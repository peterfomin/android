<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/forecastDay"
        style="@style/WeatherTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="2" />

    <ImageView
        android:id="@+id/forecastConditionImage"
        style="@style/WeatherTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/imageViewWeatherContentDescription" />

    <TextView
        android:id="@+id/forecastCondition"
        style="@style/WeatherTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_weight="4" />

    <TextView
        android:id="@+id/forecastTempLow"
        style="@style/WeatherTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/forecastTempHigh"
        style="@style/WeatherTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/forecastWindDir"
        style="@style/WeatherTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="3" />

    <TextView
        android:id="@+id/forecastWindSpeed"
        style="@style/WeatherTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="3" />

    <TextView
        android:id="@+id/forecastPrecipitation"
        style="@style/WeatherTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_weight="2" />

</LinearLayout>