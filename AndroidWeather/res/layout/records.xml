<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!-- location layout -->
    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

	    <TextView
	        android:id="@+id/location"
	        style="@style/WeatherTextNormal"
	        android:gravity="center"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />
	
    </LinearLayout>

<ScrollView
        android:id="@+id/layoutDataScroll"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- data layout -->
    <RelativeLayout
        android:id="@+id/layoutData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
	    
        <!-- labels -->
	    <TextView
	        android:id="@+id/type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/recordTypeLabel"
	        style="@style/WeatherTextNormal" />
	    
   	    <TextView
	        android:id="@+id/lowLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/recordLowLabel"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/type"
	        android:layout_alignTop="@+id/type"
	        style="@style/WeatherTextNormal" />

   	   <TextView
	        android:id="@+id/highLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/recordHighLabel"
	        android:layout_marginLeft="100dp"
	        android:layout_toRightOf="@+id/lowLabel"
	        android:layout_alignTop="@+id/lowLabel"
	        style="@style/WeatherTextNormal" />
	    
	    <!-- normal / record / year type -->
	    <TextView
	        android:id="@+id/normaType"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@+id/type"
	        android:layout_below="@+id/type"
	        android:text="@string/normalTemperature"
	        style="@style/WeatherTextNormal" />

	    <TextView
	        android:id="@+id/recordType"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@+id/type"
	        android:layout_below="@+id/normaType"
	        android:text="@string/recordTemperature"
	        style="@style/WeatherTextNormal" />
  	    
	    <TextView
	        android:id="@+id/yearType"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignRight="@+id/type"
	        android:layout_below="@+id/recordType"
	        android:text="@string/recordYear"
	        style="@style/WeatherTextNormal" />
  	    
	    <!-- low normal -->
	    <TextView
	        android:id="@+id/lowNormalF"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/lowLabel"
	        android:layout_below="@+id/lowLabel"
	        style="@style/WeatherTextNormal" />
	
	    <TextView
	        android:id="@+id/lowNormalC"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@+id/lowNormalF"
	        android:layout_alignTop="@+id/lowNormalF"
	        style="@style/WeatherTextNormal" />
	
	    <!-- low record -->
	    <TextView
	        android:id="@+id/lowRecordF"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/lowLabel"
	        android:layout_below="@+id/lowNormalF"
	        style="@style/WeatherTextNormal" />
	
	    <TextView
	        android:id="@+id/lowRecordC"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@+id/lowRecordF"
	        android:layout_alignTop="@+id/lowRecordF"
	        style="@style/WeatherTextNormal" />

	    <TextView
	        android:id="@+id/lowRecordYear"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/lowLabel"
	        android:layout_below="@+id/lowRecordF"
	        style="@style/WeatherTextNormal" />

	    <!-- high normal -->
   	    <TextView
	        android:id="@+id/highNormalF"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/highLabel"
	        android:layout_below="@+id/highLabel"
	        style="@style/WeatherTextNormal" />
	
	    <TextView
	        android:id="@+id/highNormalC"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@+id/highNormalF"
	        android:layout_alignTop="@+id/highNormalF"
	        style="@style/WeatherTextNormal" />	    

		<!-- high record -->
	    <TextView
	        android:id="@+id/highRecordF"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/highLabel"
	        android:layout_below="@+id/highNormalF"
	        style="@style/WeatherTextNormal" />
	
	    <TextView
	        android:id="@+id/highRecordC"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@+id/highRecordF"
	        android:layout_alignTop="@+id/highRecordF"
	        style="@style/WeatherTextNormal" />

	    <TextView
	        android:id="@+id/highRecordYear"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/highLabel"
	        android:layout_below="@+id/highRecordF"
	        style="@style/WeatherTextNormal" />
	    	    	    
    </RelativeLayout>
</ScrollView>
    
    <!-- footer layout -->
    <RelativeLayout
        android:id="@+id/layoutFooter"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

		<TextView
	        android:id="@+id/textViewDataProvider"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:gravity="center_horizontal"/>
        
   	</RelativeLayout>

</LinearLayout>
